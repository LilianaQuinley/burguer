<!-- 5. template that Handlebars can render onto.
 -->
<div class = "container">
     <div class = "row"> 
        <img src="assets/img/burger.png" alt="fat burger">
     </div>

    <div class = "row">
        <div class = "col-sm-12 text center">
             <h1> EAT DA BURGER! </h1>
        </div>
    </div>

    <div class="card-deck">
        <div class="card bg-primary">
            <div class="card-body text-center">
                <h2 class="card-text">Your Creation</h2>                 
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                    <pre> {{this.id}}. {{this.burger_name}} </pre>   


                <form method="POST" action="/burgers/update?_method=PUT"
                    class = "button-size">
                    <input type="hidden" name="burger_id" type="text" 
                    value={{this.id}}>
                    <button type ="submit" class="btn btn-default">
                        DEVOUR IT! </button>
                </form>
                {{/unless}}
                {{/each}} 
            </div>
        </div>

        <div class="card bg-success">
            <div class="card-body text-center">
                <h2 class="card-text">Still Hungry?</h2>
                {{#each burger_data}}
                    {{#if this.devoured}}
                    <input class="form-control" type+"text" 
                    placeholder = "{{this.id}}. {{this.burger_name}}" readonly>
                    {{/if}}
                    {{/each}}
            </div>
        </div>
    </div>
   
<br>

    <div class="row">
        <div class = "col-xs-12 text center"> 
            <h2>Enter in a burger you would like to eat</h2>
            <form action ="/burgers/create" method= "POST">
                <input type="text" name="burger_name" class ="form-control"
                    value= "" id="enter_text">
                <br>
                <button type ="submit" class="btn btn-primary" id="text-enter-button">
                    SUBMIT</button>
            </form>      
        </div>
    </div>
    

</div>



