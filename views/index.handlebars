<!-- 5. template that Handlebars can render onto.
 -->
<div class = "container">
     <div class = "row"> 
        <img src="assets/img/burger.png" alt="fat burger">
     </div>

    <div class = "row">
        <div class = "col-sm-12 text center">
             <h1> EAT DA BURGER! </h1>
        </div>
    </div>
    
    <div class = "row"> 
        <div class = "col-xs-5 text-center" id="task">
           <ol>
                {{#each burger_data}}
                {{#unless this.devoured}}
                <ul>
                    <pre> {{this.id}}. {{this.burger_name}} </pre>    
                </ul>                  
           </ol>   
        </div>
    
        <div class = "col-xs-2 text center">
            <form method="POST" action="/burgers/update?_method=PUT"
                class = "button-size">
                <input type="hidden" name="burger_id" type="text"
                value={{this.id}}>
                <br>
                <button type ="submit" class="btn btn-default">
                    DEVOUR IT! </button>
            </form>
        </div>
        {{/unless}}
        {{/each}} 
        
        <div class = "col-xs-5 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type+"text" placeholder = "{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>       
    </div>    


<br>


    <div class = "row">
        <div class = "col-xs-12 text-center">
            <form action ="/burgers/create" method= "POST">
                <input type="text" name="burger_name" class ="form-control"
                value= "" id="enter_text">
                <button type ="submit" class="btn btn-primary" 
                id="text-enter-button">SUBMIT</button>
            </form>
            <P>Enter in a burger you would like to eat</P>
        </div>
    </div>

</div>



